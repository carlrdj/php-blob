{% extends 'layout.twig' %}
{% block content %}
    			<h2>Update Post</h2>
					<p>
						<a class="btn btn-default" href="{{ 'admin/posts' | url }}">Back</a>						
					</p>
					{% if errors %}			    	
						{% include 'partials/errors.twig' %}
			    {% endif %}
					{% if result %}
					<div class="alert alert-success">
						Post Update!
					</div>
					{% endif %}
					<form method="post">
						<div class="form-group">
							<label for="inputTitle">Title</label>
							<input class="form-control" type="text" id="inputTitle" name="titulo" value="{{blogPost.titulo}}">
						</div>
						<div class="form-group">
							<label for="inputImg">Imagen</label>
							<input class="form-control" type="text" id="inputImg" name="img_url" value="{{blogPost.img_url}}">
						</div>
						<label for="inputImg">inputContent</label>
						<textarea class="form-control" name="contenido" id="inputContent" rows="5"> {{blogPost.contenido}}</textarea>
						<br>
						<input type="hidden" name="id" value="{{blogPost.id}}">
						<input class="btn btn-primary" type="submit" value="Save">
					</form>
{% endblock %}
{% block js %}
    <script>
    function validateForm() {
    	var title = document.getElementById('inputTitle').value.trim();
    	var content = document.getElementById('inputContent').value.trim();
    	if (title === '') {
    		swal(
    			'Opops...',
    			'Title is required'
    			)
    	}else if(content === ''){
    		swal(
    			'Opops...',
    			'Content is required'
    			)
    	}
    	return false;
    }
    </script>
{% endblock %}