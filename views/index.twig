{% extends "layout.twig" %}
{% block content %}
				<div>
					<nav aria-label="Page navigation">
					  <ul class="pagination">
					{% for page in 1..ctaspags %}
						<li {% if pag==page %}class="active"{% endif %}>
							<a href="{{ page | url }}">
								{{page}}
							</a>
						</li>
					{% endfor %}
					  </ul>
					</nav>		
				</div>
				
				{% for blogPost in blogPosts %}
					<div class="blog-post">
						<h2>
							<a href="{{ 'blog/' | url }}{{ blogPost.titulo }}">
								{{ blogPost.titulo }}
							</a>
						</h2>
						<p>Jan 1, 2020 by <a href="">Carl</a></p>
						{% if blogPost.img_url %}
							<div class="blog-post-image">
								<img src="{{ blogPost.img_url }}" alt="">
							</div>
						{% endif %}
						<div class="blog-post-content">
							{{ blogPost.contenido }}
						</div>
					</div>
				{% endfor %}

				<div>
					<nav aria-label="Page navigation">
					  <ul class="pagination">
					{% for page in 1..ctaspags %}
						<li {% if pag==page %}class="active"{% endif %}>
							<a href="{{ page | url }}">
								{{page}}
							</a>
						</li>
					{% endfor %}
					  </ul>
					</nav>		
				</div>
{% endblock %}